            border-top: 1px solid #dee2e6;
        }

        .content {
            flex: 1;
        }

        .navbar-nav .nav-link:hover {
            color: #67aeb5 !important;
            transition: color 0.3s ease;

        }


        .navbar-brand strong:hover {
            color: #67aeb5;
            transition: color 0.3s ease;
        }

        .image {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            margin-right: 10px;
            border-radius: 10%;

        }

        .top-left {
            display: flex;
            align-items: center;

        }

        .svg {
            height: 30px;
            width: 15x;
        }

        .container-nav {
            min-width: 800px;
            margin: 20px auto;
            padding: 20px;
            border-radius: 10px;
            background-color: #f9f9f9;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .bg-light {
            background-color: #f8f9fa !important;
        }
  </style>
