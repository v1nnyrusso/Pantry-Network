<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <!-- CSS and JavaScript links can be included here -->
    <style>
        /* Container Styles */


        /* Table Styles */
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .table th,
        .table td {
            padding: 8px;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }

        .table th {
            background-color: #f2f2f2;
        }

        .table tbody tr:hover {
            background-color: #f5f5f5;
        }

    

    </style>
</head>

<body>
    <div class="container">
        <h2 style="text-align: center; color: #000000">Products Dashboard</h2>



        <table id="userTable" class="table">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Product Type</th>
                    <th>Qty Donated</th>
                    <th>Categories</th>
                    <th>Action</th>
  
                </tr>
            </thead>
            <tbody id="userTableBody">
                {{#each products}}
                <tr>
                    <td>{{productName}}</td>
                    <td>{{typeOfProduct}}</td>
                    <td>{{currentStock}}</td>
                    <td>{{categories}}</td>
                    <td>
                        {{!-- only deletes if confirmDelete() is true --}}
                        <form action="/admin/product/delete" method="post" onsubmit="return confirmDelete()">
                            <input type="hidden" name="id" value="{{_id}}">
                            <input type="hidden" name="source" value="product">
                            <button type="submit" class="btn">Delete</button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>

        <a href="/admin/product/create" id="createProductLink" class="btn">Create New Product </a>
        <p>

        </p>
    </div>
</body>

</html>

<script>
    // Function to confirm deletion
    function confirmDelete() {

        // Confirm the deletion
        if (confirm("Are you sure you want to delete this product?")) {
            return true;
        } else {
            return false;
        }


    }
</script>