<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <!-- CSS and JavaScript links can be included here -->
    <style>
        /* Container Styles */


     .container-1 {
            min-width: 1000px;
            min-height: 500px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
            position: absolute;
            top: 55%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
        /* Table Styles */
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .table th,
        .table td {
            padding: 8px;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }

        .table th {
            background-color: #f2f2f2;
        }

        .table tbody tr:hover {
            background-color: #f5f5f5;
        }

    

    </style>
</head>

<body>
    <div class="container">
        <br>
        <h2 style="text-align: center; color: #000000">Staff Dashboard</h2>



        <table id="userTable" class="table">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Phone Number</th>
                    <th>Organisation</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="userTableBody">
                {{#each staff}}
                <tr>
                    <td>{{firstName}}</td>
                    <td>{{secondName}}</td>
                    <td>{{number}}</td>
                    <td>{{organisation}}</td>
                    <td>{{email}}</td>
                    <td>
                        {{!-- only deletes if confirmDelete() is true --}}
                        <form action="/admin/staff/delete" method="post" onsubmit="return confirmDelete()">
                            <input type="hidden" name="id" value="{{_id}}">
                            <input type="hidden" name="source" value="staff">
                            <button type="submit" class="btn">Delete</button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>

        <a href="/admin/staff/create" id="createStaffLink" class="btn">Create New Member of Staff </a>
        <p>

        </p>
    </div>
</body>

</html>

<script>
    // Function to confirm deletion
    function confirmDelete() {

        // Confirm the deletion
        if (confirm("Are you sure you want to delete this staff member?")) {
            return true;
        } else {
            return false;
        }


    }
</script>